---
title: Component
layout: sample.njk
---
<div>
    {% for item in collections.component %}
        <div class="mb-4">
            <h4 class="h5 mb-3">{{ item.data.title }}</h4>
            <div class="card">
                <ul class="nav nav-pills p-1" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active py-1" data-bs-toggle="tab" data-bs-target="#preview{{ loop.index }}" type="button" role="tab" aria-controls="preview" aria-selected="true">Preview</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link py-1" data-bs-toggle="tab" data-bs-target="#code{{ loop.index }}" type="button" role="tab" aria-controls="code" aria-selected="false">Code</button>
                    </li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane active" id="preview{{ loop.index }}" role="tabpanel" aria-labelledby="preview-tab" tabindex="0">
                        <div class="card-body">
                            {{ item.content | safe }}
                        </div>
                    </div>
                    <div class="tab-pane" id="code{{ loop.index }}" role="tabpanel" aria-labelledby="code-tab" tabindex="0">
                        <div class="bg-dark px-3 py-3 rounded-bottom">
                            <code>
                                <pre class="mb-0">{{ item.content }}</pre>
                            </code>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
</div>